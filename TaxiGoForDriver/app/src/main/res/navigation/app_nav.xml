<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_nav"
    app:startDestination="@id/onboardingFragment">

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.taxigofordriver.ui.onboarding.OnboardingFragment"
        android:label="fragment_onboarding"
        tools:layout="@layout/fragment_onboarding" >
        <action
            android:id="@+id/toEnterPhone"
            app:destination="@id/enterPhoneFragment" />
    </fragment>
    <fragment
        android:id="@+id/enterPhoneFragment"
        android:name="com.example.taxigofordriver.ui.enterphone.EnterPhoneFragment"
        android:label="fragment_enter_phone"
        tools:layout="@layout/fragment_enter_phone" >
        <action
            android:id="@+id/toConfirmCode"
            app:destination="@id/confirmCodeFragment" />
    </fragment>
    <fragment
        android:id="@+id/confirmCodeFragment"
        android:name="com.example.taxigofordriver.ui.confirmCode.ConfirmCodeFragment"
        android:label="fragment_confirm_code"
        tools:layout="@layout/fragment_confirm_code" >
        <argument
            android:name="phone"
            app:argType="string" />
        <action
            android:id="@+id/toEnterDriverInfo"
            app:destination="@id/enterDriverInfoFragment" />
    </fragment>
    <fragment
        android:id="@+id/enterDriverInfoFragment"
        android:name="com.example.taxigofordriver.ui.enterDriverInfo.EnterDriverInfoFragment"
        android:label="fragment_enter_driver_info"
        tools:layout="@layout/fragment_enter_driver_info" >
        <action
            android:id="@+id/toHomeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.taxigofordriver.ui.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
</navigation>